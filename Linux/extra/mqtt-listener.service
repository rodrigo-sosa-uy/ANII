[Unit]
Description=MQTT Topic Listener
After=network.target mosquitto.service
Wants=network.target

[Service]
ExecStart=/usr/local/bin/mqtt-listener.sh
Restart=always
RestartSec=5
User=root
WorkingDirectory=/usr/local/bin
StandardOutput=append:/var/log/mqtt-listener.log
StandardError=append:/var/log/mqtt-listener.log

[Install]
WantedBy=multi-user.target